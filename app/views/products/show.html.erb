<div class="product_pages">
	<p id="notice"><%= notice %></p>

	<h1>Product</h1>
	<p>
	  <strong>Name:</strong>
	  <%= @product.name %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @product.description %>
	</p>

	<p>
	  <strong>Image url:</strong>
	  <%= @product.image_url %>
	</p>

	<div class="product_link">
		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %>
	</div>
</div>